<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatSystemForDevs" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Defining colors -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/ghost</item>
        <item name="colorSecondary">@color/golden</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/ghost</item>
        <item name="subtitleTextColor">@color/gray</item>
        <item name="errorTextColor">@color/red</item>
        <!-- Applying colors -->
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorLink">?attr/colorSecondary</item>
        <item name="android:subtitleTextColor">?attr/subtitleTextColor</item>
        <item name="android:editTextColor">?attr/colorOnPrimary</item>
        <item name="android:editTextBackground">?attr/colorPrimaryVariant</item>
        <item name="android:textColorHint">?attr/subtitleTextColor</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Applying default font -->
        <item name="android:fontFamily">@font/inputmono_regular</item>

        <!-- Customize your theme here -->
    </style>
    <style name="Theme.AuthScreens" parent="Theme.ChatSystemForDevs">
        <item name="android:textSize">18sp</item>
        <item name="materialButtonStyle">@style/auth_button</item>
    </style>
    <style name="Theme.GuildScreens" parent="Theme.ChatSystemForDevs">
        <item name="android:textSize">16sp</item>
    </style>
</resources>