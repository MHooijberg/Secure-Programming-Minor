<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatSystemForDevs" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Defining colors -->
        <item name="colorPrimary">@color/golden</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/ghost</item>
        <item name="colorAccent">@color/ghost</item>
        <item name="subtitleTextColor">@color/gray</item>
        <item name="errorTextColor">@color/red</item>
        <!-- Applying colors -->
        <item name="android:textColorPrimary">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textColorLink">?attr/colorPrimary</item>
        <item name="android:subtitleTextColor">?attr/subtitleTextColor</item>
        <item name="android:editTextColor">?attr/subtitleTextColor</item>
        <item name="android:editTextBackground">?attr/colorSecondaryVariant</item>
        <item name="android:textColorHint">?attr/subtitleTextColor</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Applying default font -->
        <item name="android:fontFamily">@font/inputmono_regular</item>

        <!-- Customize your theme here -->
    </style>
    <style name="Theme.AuthScreens" parent="Theme.ChatSystemForDevs">
        <item name="android:textSize">20sp</item>
    </style>
</resources>