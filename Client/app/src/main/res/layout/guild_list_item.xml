<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.GuildScreens">

    <androidx.cardview.widget.CardView
        android:id="@+id/guild_list_card"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:background="?attr/colorPrimary"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/guild_list_card_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ghost"
            android:contentDescription="@string/guild_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/guild_list_name_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:text="@string/guild_name"
            />

        <TextView
            android:id="@+id/guild_list_id_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:text="@string/guild_name"
            />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>